category:            Cryptography
build-type:          Simple
extra-source-files:  Readme.md
cabal-version:       >=1.10

executable circuit-synthesis
  main-is:             Main.hs
  GHC-options: -fwarn-incomplete-patterns -fno-warn-name-shadowing -fno-warn-unused-do-bind
  -- other-modules:
  -- other-extensions:
  build-depends:       base
                     , DRBG
                     , IfElse
                     , bimap
                     , bytestring
                     , containers
                     , crypto-api
                     , deepseq
                     , ghc-prim
                     , integer-gmp
                     , monad-par
                     , monad-parallel
                     , mtl
                     , options
                     , parallel
                     , parallel-io
                     , parsec
                     , process
                     , split
                     , stm
                     , vector
                     , circuit-synthesis

  hs-source-dirs:      src
  default-language:    Haskell2010

library
  build-depends:       base
                     , DRBG
                     , IfElse
                     , bimap
                     , bytestring
                     , containers
                     , crypto-api
                     , deepseq
                     , ghc-prim
                     , integer-gmp
                     , monad-par
                     , monad-parallel
                     , mtl
                     , options
                     , parallel
                     , parallel-io
                     , parsec
                     , process
                     , split
                     , stm
                     , vector

  hs-source-dirs:      src
  default-language:    Haskell2010

  exposed-modules:
    Circuit
    Circuit.Builder
    Circuit.Format.Acirc
    Circuit.Format.Sexp
    Circuit.Optimizer
    Circuit.Parser
    Circuits.Goldreich
    Circuits.Aes
    Circuits.Tribes
  other-modules:
    Rand
    Util

  ghc-options: -Wall -fno-warn-name-shadowing -fno-warn-unused-do-bind -fno-warn-orphans
  ghc-prof-options: -O2 -fprof-auto-top
